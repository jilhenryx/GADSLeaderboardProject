<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:contentDescription="@string/splash_screen_content_description"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="80dp"
        android:layout_marginTop="@dimen/main_activity_image_view_margin"
        android:layout_marginEnd="80dp"
        android:layout_marginBottom="@dimen/main_activity_image_view_margin"
        android:contentDescription="@string/image_gads_logo_content_description"
        android:focusable="false"
        android:src="@drawable/gads_full_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>